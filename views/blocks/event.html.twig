Event-block

@author Jérémy Levron <jeremylevron@19h47.fr> (http://19h47.fr)
@param arr event
@file blocks/event.html.twig

#}
<section class="Event-block block">
	<header class="Site-container block__header">
		<div class="row">
			<div class="col-12 col-md-4">
				<img class="Logo" src="{{ manifest['img/svg/logo-decor-white.svg'] }}" alt="{{ site.description }}" width="202" height="72">
			</div>

			{% if event.link %}
				<div class="col-12 col-md-7 text-align-right">
					<a class="block__menu" href="{{ partners.link.url }}">{{- __( 'L\'événement' ) -}}</a>
				</div>
			{% endif %}

			<div class="col-12 col-md-1 text-align-right{{ event.link ?: ' offset-md-7' }}">
				{% include 'components/socials.html.twig' %}
			</div>
		</div>
	</header>
	<div class="Site-container block__inner">
		<div class="row align-items-center">
			<div class="col-12 col-md-8 offset-md-1">
				<h2 class="block__title h1 margin-bottom-0">{{- event.title -}}</h2>
				<h3 class="h2 margin-top-0">{{- event.subtitle -}}</h3>
			</div>

			<div class="col-12 col-md-5 offset-md-1">
				<div class="block__content Wysiwyg">{{- event.content -}}</div>

				{% if event.link %}
					<a class="Button Button--outline-primary" href="{{ event.link.url }}"{{ event.link.target ? ' target="_blank"' }}>
						{{- event.link.title | default( 'Découvrir' ) -}}
					</a>
				{% endif %}
			</div>
		</div>
	</div>

	{% include 'common/grid.html.twig' %}

	<img class="Event-block__image" src="{{ manifest['img/svg/golf-ball-event.svg'] }}" alt="" width="1427" height="1427">

</section>
