{#

Partners-block

@author Jérémy Levron <jeremylevron@19h47.fr> (http://19h47.fr)
@param arr partners
@file blocks/partners.html.twig

#}
<section class="Partners-block block">
	<header class="Site-container block__header">
		<div class="row">
			<div class="col-12 col-md-4">
				<img class="Logo" src="{{ manifest['img/svg/logo-decor-white.svg'] }}" alt="{{ site.description }}" width="202" height="72">
			</div>

			{% if partners.link %}
				<div class="col-12 col-md-7 text-align-right">
					<a class="block__menu" href="{{ partners.link.url }}">{{- __( 'Les partenaires' ) -}}</a>
				</div>
			{% endif %}

			<div class="col-12 col-md-1 text-align-right{{ partners.link ?: ' offset-md-7' }}">
				{% include 'components/socials.html.twig' %}
			</div>
		</div>
	</header>
	<div class="Site-container block__inner">
		<div class="row align-items-center">
			<div class="col-12 col-md-6 offset-md-1">
				<h2 class="block__title h1">{{- partners.title -}}</h2>
				<h3 class="h2">{{- partners.subtitle -}}</h3>

				<div class="block__content Wysiwyg">{{- partners.content -}}</div>

				{% if partners.link %}
					<a class="Button Button--outline-primary" href="{{ partners.link.url }}"{{ partners.link.target ? ' target="_blank"' }}>
						{{- partners.link.title | default( 'Découvrir' ) -}}
					</a>
				{% endif %}
			</div>

            <div class="col-12 col-md-4">
				<img class="Partners-block__logo" src="{{ manifest['img/svg/golf-ball.svg'] }}" alt="{{ site.description }}" width="217" height="217">
			</div>

		</div>
	</div>

	{% include 'common/grid.html.twig' %}

    <img class="Hero-block__image" src="{{ Image( partners.image ).src }}" alt="">

</section>
