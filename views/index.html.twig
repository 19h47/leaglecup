{# Header #}
{% include 'header.html.twig' %}

<header class="Site-header">
    <div class="Site-container">
		<div class="row">
			<div class="col-12 col-md-4">
				<a class="d-inline-block" href="{{ site.link }}">
					<img class="Logo" src="{{ manifest['img/svg/logo-decor.svg'] }}" alt="{{ site.description }}" width="202" height="72">
				</a>
			</div>
			<div class="col-12 col-md-7{{ contact.socials is iterable ? '' : ' offset-md-1' }}">
				{%
					include 'components/menu-main.html.twig'
					with { items: menu.main.items }
					only
				%}
			</div>
            {% if contact.socials is iterable %}
                <div class="col-12 col-md-1 text-align-md-right">
                    {% include 'components/socials.html.twig' %}
                </div>
            {% endif %}
		</div>
	</div>

    {% block hero %}
        <section class="Page__hero Site-container">
            <div class="row">
                <div class="col-12">
                    <h1 itemprop="name" class="Page__hero__title">{{- post.title -}}</h1>
                </div>
            </div>
            <footer class="Page__hero__footer">
                {% include 'svg/use.html.twig' with { icon: 'scroll-to' } only %}
                <p class="margin-0">{{- __( 'Scroll' ) }}</p>
            </footer>
        </section>
        {% include 'common/grid.html.twig' %}
    {% endblock %}

</header>


<main id="main-container" role="main">

	<div id="page-content" class="page-content Page__wrapper"
		data-node-type="{{ node_type }}"
		data-meta-title="{{ wp_get_document_title() }}"
		data-body-class="{{ get_body_class( node_type ) | join( ' ' ) }}"
	>

        {# Content #}
        {% block content %}
            {% if post.content or post.get_field( 'display_partners') %}
                <section class="Page__content">
                    <div class="Site-container">
                        {% if post.content %}
                            <div class="row">
                                <div class="col-12 col-md-10 offset-md-1">
                                    <div class="Wysiwyg">{{- post.content -}}</div>
                                </div>
                            </div>
                        {% endif %}
                    </div>

                    {% if post.get_field( 'display_partners') %}{{ partners }}{% endif %}

                    {% include 'common/grid.html.twig' %}
                </section>
            {% endif %}
        {% endblock %}

		</div>
</main>


{# Footer #}
{% include 'footer.html.twig' %}
