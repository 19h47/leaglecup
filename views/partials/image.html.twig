{#
 # Image
 #
 # @param array classes
 # @param string loading
 # @param array image
 # @param array attributes
 #
 # @package leaglecup
 #}
{% if image %}
	<picture>
		<source srcset="{{ Image( image ).src | towebp }}" type="image/webp">
		<source srcset="{{ Image( image ).src }}" type="{{ Image( image ).sizes.medium['mime-type'] }}">
		<img
		 	class="{{ classes ? classes | join( ' ' ) }}"
			loading="{{ loading | default( 'lazy' ) }}"
			src="{{ Image( image ).src }}"
			alt="{{ Image( image ).alt }}"
			width="{{ Image( image ).width }}"
			height="{{ Image( image ).height }}"
			{{ attributes ? attributes | map( ( value, key ) => "#{key}=\"#{value}\"" ) | join( ' ' )  | raw }}
		>
	</picture>
{% endif %}
